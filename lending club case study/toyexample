from io import BytesIO
from pptx import Presentation

def pptx_to_bytes(file_path: str) -> bytes:
    """
    Reads a .pptx file from the given path and converts it to bytes.
    
    :param file_path: Path to the .pptx file
    :return: The .pptx file content in byte format
    """
    # Open the pptx file and read it into a memory buffer (BytesIO)
    with open(file_path, 'rb') as pptx_file:
        pptx_bytes = pptx_file.read()
    
    return pptx_bytes

# Example usage:
pptx_bytes = pptx_to_bytes('path_to_your_pptx_file.pptx')
print(type(pptx_bytes))  # It will print: <class 'bytes'>


